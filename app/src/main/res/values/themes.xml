<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RawgApps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/game_detail_shape_bg_color</item>
        <item name="colorPrimaryVariant">@color/filter_card_bg_color</item>
        <item name="colorOnPrimary">@color/game_detail_shape_bg_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/game_detail_text_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>
</resources>